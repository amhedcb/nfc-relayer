generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PaymentTx {
  uuid            String   @id
  toAddress       String
  chainId         String
  contractAddress String
  value           String
  data            Json?
  dappName        String?
  dappUrl         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ContactlessPaymentTxData {
  uuid                    String   @id
  chainId                 String
  requiresBuyerAddress    Boolean?
  contractAbi             String?
  placeholderBuyerAddress String?
  approveTxs              Json?
  relayerSubmissionParams Json?
  paymentTx               Json
  dappName                String?
  dappUrl                 String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}
